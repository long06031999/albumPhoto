<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/groupImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:riv_corner_radius="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/aa"/>

    <TextView
        android:id="@+id/tvTitleGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Camera"
        android:textColor="@color/textColorPrimary"
        android:paddingHorizontal="4dp"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/groupImage"
        app:layout_constraintTop_toBottomOf="@+id/groupImage"
        app:layout_constraintEnd_toEndOf="@+id/groupImage"
        android:ellipsize="end"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/tvCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Camera"
        android:paddingHorizontal="4dp"
        android:layout_marginTop="4dp"
        android:textSize="13sp"
        android:textColor="@color/textColorSecond"
        app:layout_constraintStart_toStartOf="@+id/groupImage"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleGroup"
        app:layout_constraintEnd_toEndOf="@+id/groupImage"/>

</androidx.constraintlayout.widget.ConstraintLayout>