<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <corners android:radius="1dp" />
                    <stroke android:width="1dp" android:color="#777" />
                    <gradient android:endColor="@color/white" android:startColor="@color/white" />
                    <size android:width="22dp" android:height="22dp" />
                </shape>
            </item>

            <item android:width="8dp" android:height="2dp" android:left="4dp" android:top="14dp">
                <rotate android:fromDegrees="45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/black" />
                    </shape>
                </rotate>
            </item>

            <item android:width="10dp" android:height="2dp" android:left="9dp" android:top="12dp">
                <rotate android:fromDegrees="-45">
                    <shape android:shape="rectangle">
                        <solid android:color="@color/black" />
                    </shape>
                </rotate>
            </item>
        </layer-list>
    </item>

</selector>